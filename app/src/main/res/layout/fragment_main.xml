<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MainFragment"
    android:background="@color/red">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/find_food_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="46dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:fontFamily="@font/eczar_regular"
        android:textSize="40sp"
        android:lineSpacingExtra="-20dp"
        android:text="@string/find_your_food"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/find_food_txt"
        app:layout_constraintBottom_toBottomOf="@id/find_food_txt"
        app:layout_constraintEnd_toEndOf="@id/search_tl"
        android:src="@drawable/ic_food"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_tl"
        android:layout_width="310dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/find_food_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:textColorHint="@color/red"
        style="@style/TextInputLayoutStyle"
        >

        <androidx.appcompat.widget.SearchView
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            app:iconifiedByDefault="false"
            android:drawableStart="@drawable/ic_search"
            app:queryHint="@string/buscar"
            android:textColor="@color/red"
            android:textSize="15sp"
            app:searchIcon="@drawable/ic_search"
            android:drawablePadding="6dp"
            />


    </com.google.android.material.card.MaterialCardView>

    <Spinner
        android:id="@+id/tag_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_tl"
        app:layout_constraintEnd_toEndOf="@id/search_tl"
        android:backgroundTint="@color/white"
        android:entries="@array/tags"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_food"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_tl"
        app:layout_constraintStart_toStartOf="@id/search_tl"
        android:paddingTop="50dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="@id/search_tl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"

        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/error_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/search_tl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_no_connection"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/error_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/error_img"
        app:layout_constraintStart_toStartOf="@id/error_img"
        app:layout_constraintEnd_toEndOf="@id/error_img"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        tools:text="Sem internet"
        android:textColor="@color/white"
        android:visibility="gone"
        />






</androidx.constraintlayout.widget.ConstraintLayout>